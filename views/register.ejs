<% include partials/header.ejs %>
	
<div class="container mt-4 card bg-light" style="width: 200rem;">
  <h5>Resgistrar-se</h5>
    <form action="/register" method="POST">
        
      <div class="form-row mt-2">
        <div class="form-group col-md-6">
          <label for="inputName4">Name*</label>
          <input type="first name" class="form-control" name="username" placeholder="Albert Saint" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputLastName4">Last Name*</label>
          <input type="last name" class="form-control" name="UserLastName" placeholder="Reinhardt" required>
        </div>
      </div>
             
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputEmail4">Email*</label>
          <input type="email" class="form-control" name="UserEmail" placeholder="Email" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Password*</label>
          <input type="password" class="form-control" name="password" placeholder="Password" required>
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Address*</label>
        <input type="text" class="form-control" name="UserAddress" placeholder="1234 Main St" required>
      </div>
      <div class="form-group">
        <label for="inputAddress2">CPF</label>
        <input type="text" class="form-control" name="UserCPF">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputCity">City*</label>
          <input type="text" class="form-control" name="UserCity" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputState">State*</label>
          <input type="text" class="form-control" name="UserState" required>
        </div>
        <div class="form-group col-md-2">
          <label for="inputZip">CEP*</label>
          <input type="text" class="form-control" name="UserCEP" required>
        </div>
      </div>
      
      <button type="submit" class="mb-4 btn btn-primary">Registrar</button>
    </form>
</div>


<div class="container mt-4 card bg-light" style="width: 200rem;">
  <h5>Login</h5>
    <form action="/login" method="POST">
        
      <div class="form-row mt-2">
        <div class="form-group col-md-6">
          <label for="inputName4">Name*</label>
          <input type="first name" class="form-control" name ="username" placeholder="username" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputLastName4">Senha*</label>
          <input type="password" class="form-control" name="password" required>
        </div>
      </div>
             
      
      <button type="submit" class="mb-4 btn btn-primary">Login</button>
    </form>
</div>

