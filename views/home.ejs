<% include partials/header.ejs %>
  <div class="container mt-5">
    
        <div class="content">
          <h1 style="font-weight: 700; font-size: 4.5em;">KACHAU</h1>
          <h3>A maior explosão de preço do Brasil</h3>
          <hr>
          <form class="form-group" name="search">
            
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar itens">
                <div class="input-group-append mr-5">
                  <button type="submit" class="btn btn-default" style="background-color:white ;" type="button"><i class="fas fa-search"></i></button>
                </div>
              </div>
          </form>
        </div>
        
        
  </div>
  
	<div class="container">
	    <div class="row mt-5 ml-1">
	        
            <%prods.forEach(function(prod){%>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-5">
	            <div class="card" style="width: 18rem;">
                  <img src="<%=prod.img%>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"> <a href="/produto/<%=prod.name%>"> <%=prod.name%> </a> </h5>
                    <p class="card-text"> <%=prod.desc%> </p>
                    <h5 class="card-title" style="color: green">R$  <%=prod.preco%> </h5>
                    <a href="/compra" class="btn btn-success" >Comprar</a>
                    <a href="/cart/<%=prod._id%>" class="btn btn-primary btn-sm" >+ carrinho</a>
                    <!-- <form method="POST" action="/cart">
                        <a href="/compra" class="btn btn-success" >Comprar</a>
                        <input type="hidden" name="prod" value="<%=prod.name%>">
                        <button type="submit" class="btn btn-primary btn-sm" >+ carrinho</button>
                    </form> -->
                    
                  </div>
                </div>
            </div>
            <% }); %>
	        
	    </div>
	    
    </div>
<% include partials/footer.ejs %>
