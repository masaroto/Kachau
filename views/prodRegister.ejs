<% include partials/headerFunc.ejs %>
	
	<div class="container mt-4 card bg-light" style="width: 200rem;">
	  <h5>Resgistrar Produto</h5>
	    <form action="/register/prod" method="POST">
	             
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Nome*</label>
              <input type="text" class="form-control" name="produto[name]" placeholder="Nome do produto" required>
            </div>
            <div class="form-group col-md-6">
              <label>Preço*</label>
              <input type="number" class="form-control" name="produto[preco]" placeholder="Preço do produto" required>
            </div>
          </div>
          <div class="form-group">
            <label>Descrição*</label>
            <textarea class="form-control" aria-label="With textarea" name="produto[desc]"></textarea>
          </div>
          <div class="form-group">
            <label for="inputAddress2">Image</label>
            <input type="text" class="form-control" name="produto[img]" placeholder="">
          </div>
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="inputCity">Quantidade</label>
              <input type="number" class="form-control" name="produto[qtd]" required>
            </div>
          </div>
          <button type="submit" class="mb-4 btn btn-primary">Registrar</button>
        </form>
	</div>
<% include partials/footer.ejs %>